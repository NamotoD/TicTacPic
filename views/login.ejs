<!-- views/login.ejs -->
<!doctype html>
<html>
    <head>
        <% include partials/head %>
        <link rel="prefetch" href="../images/background/animalsSpriteNew.jpg">
    </head>
<body>
<img src="../images/084.png" class="bg">
<div id = "loginScreen" class="main-screenFrame container-fluid text-center">
    <div id = "loginWrap" class="row-fluid no-gutter">
        
        <div id = "jumbotronLogin" class="jumbotron text-center col-xs-12">
        
            <h1><span class="fa fa-sign-in"></span> Login</h1>
        
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>
        
            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" required>
                </div>
        
                <button type="submit" class="btn btn-warning btn-lg">Login</button>
            </form>
        
            <p>Need an account?</p>
            <p> <a href="/signup">Signup</a> Or go <a href="/">home</a>.</p>
        
        </div>
    </div>
</div>
</body>
</html>

