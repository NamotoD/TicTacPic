<!-- views/login.ejs -->
<!doctype html>
<html>
    <head>
        <% include partials/head %>
        <link rel="prefetch" href="../images/background/animalsSpriteNew.jpg">
        <link rel="prefetch" href="../images/background/wood.png">
        <link rel="prefetch" href="../images/background/BrushedAluminiumChat2.png">
        <link rel="prefetch" href="../images/background/BrushedAluminiumChat.png">
        <link rel="prefetch" href="../images/background/BrushedAluminium.png">
        <link rel="prefetch" href="../images/background/brushed_aluminium_button_long.png">
        <link rel="prefetch" href="../images/background/brushed_aluminium_button.png">
        <link rel="prefetch" href="../images/084.png">
        <link rel="prefetch" href="../images/myTile6.png">
        <link rel="prefetch" href="../images/Orientation_Icon_128x128.png">
    </head>
<body>
<img src="../images/084.png" class="bg">
<div id = "loginScreen" class="main-screenFrame container-fluid">
    <div id = "loginWrap" class="row-fluid no-gutter">
        
        <div class="col-sm-6 col-sm-offset-3">
        
            <h1><span class="fa fa-sign-in"></span> Login</h1>
        
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>
        
            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
        
                <button type="submit" class="btn btn-warning btn-lg">Login</button>
            </form>
        
            <hr>
        
            <p>Need an account? <a href="/signup">Signup</a></p>
            <p>Or go <a href="/">home</a>.</p>
        
        </div>
    </div>
</div>
</body>
</html>

